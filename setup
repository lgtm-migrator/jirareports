# Setup environment for Termux

# Variables
dir=~/dot_android                 # dotfiles directory

# change to the dotfiles directory
echo "Changing to the $dir directory"
cd $dir

# Create symlinks for all files in the directory
for file in $(ls); do
    echo "Creating symlink to $file in home directory."
    ln -s $dir/$file ~/.$file
done
rm ~/.README.md 

# Grant access to internal storage
termux-setup-storage

# Install packages
apt-get update
apt-get upgrade
apt-get install git vim-python inetutils man openssh dnsutils fontconfig-utils wget tar nmap apt-transport-https bash-completion bsdtar bzip2 curl diffutils dos2unix elinks figlet findutils gnupg gnutls grep gzip lftp mlocate linux-man-pages p7zip procps psmisc pwgen python2 rsync sed sharutils strace unrar unzip zip clang python-dev libxml2-dev libffi-dev libxslt-dev

# Install python packages
pip install jedi
